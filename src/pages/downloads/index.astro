---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const baseDownloadUrl = 'https://github.com/SchoolyB/EZ/releases/latest/download';

const downloads = [
  {
    platform: 'macOS',
    icon: 'apple',
    options: [
      { label: 'Apple Silicon', note: 'M-Series', arch: 'ARM64', file: 'ez-darwin-arm64.tar.gz' },
      { label: 'Intel', arch: 'AMD64', file: 'ez-darwin-amd64.tar.gz' },
    ]
  },
  {
    platform: 'Windows',
    icon: 'windows',
    options: [
      { label: '64-bit', arch: 'AMD64', file: 'ez-windows-amd64.zip' },
    ]
  },
  {
    platform: 'Linux',
    icon: 'linux',
    options: [
      { label: 'ARM64', arch: 'ARM64', file: 'ez-linux-arm64.tar.gz' },
      { label: 'x86-64', arch: 'AMD64', file: 'ez-linux-amd64.tar.gz' },
    ]
  }
];
