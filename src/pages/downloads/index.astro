            ))}
          </div>
        </div>
      ))}
    </div>

    <!-- Next Step -->
    <div class="mt-16 text-center">
      <p class="text-base opacity-50 mb-3">Next Step</p>
      <a
        href={`${import.meta.env.BASE_URL}getting-started`}
        class="inline-flex items-center gap-3 text-2xl font-bold hover:opacity-70 transition-opacity"
      >
        Install EZ
        <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
    </div>
    </section>

    <div class="snap-start">
      <Footer />
    </div>
  </main>

  <script>
    const CACHE_KEY = 'ez-latest-release-cache';
    const CACHE_DURATION = 5 * 60 * 1000; // 5 minutes

    interface CachedRelease {
      tag_name: string;
      published_at: string;
      html_url: string;
      timestamp: number;
    }

    function getCachedRelease(): CachedRelease | null {
      try {
        const cached = localStorage.getItem(CACHE_KEY);
        if (!cached) return null;
        const data = JSON.parse(cached);
        if (Date.now() - data.timestamp < CACHE_DURATION) {
          return data;
        }
        return null;
      } catch {
        return null;
      }
    }

    function setCachedRelease(release: { tag_name: string; published_at: string; html_url: string }): void {
      try {
        localStorage.setItem(CACHE_KEY, JSON.stringify({
          ...release,
          timestamp: Date.now()
        }));
      } catch {
        // localStorage might be full or disabled
      }
    }

    function updateUI(tagName: string, publishedAt: string, htmlUrl: string): void {
      const versionText = document.getElementById('version-text');
      const releaseDate = document.getElementById('release-date');
      const releaseLink = document.getElementById('release-link') as HTMLAnchorElement | null;

      if (versionText) {
        versionText.textContent = tagName;
      }
      if (releaseDate && publishedAt) {
        const formattedDate = new Date(publishedAt).toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        });
        releaseDate.textContent = ` Â· ${formattedDate}`;
      }
      if (releaseLink && htmlUrl) {
        releaseLink.href = htmlUrl;
      }
    }

    async function fetchLatestRelease(): Promise<void> {
      // Check cache first
      const cached = getCachedRelease();
      if (cached) {
        updateUI(cached.tag_name, cached.published_at, cached.html_url);
        return;
      }

      try {
        const response = await fetch('https://api.github.com/repos/SchoolyB/EZ/releases/latest', {
          headers: {
            'Accept': 'application/vnd.github.v3+json',
            'User-Agent': 'EZ-Docs-Site'
          }
        });

        if (response.ok) {
          const data = await response.json();
          setCachedRelease(data);
          updateUI(data.tag_name, data.published_at, data.html_url);
        } else {
          const versionText = document.getElementById('version-text');
          if (versionText) versionText.textContent = 'latest';
        }
      } catch {
        const versionText = document.getElementById('version-text');
        if (versionText) versionText.textContent = 'latest';
      }
    }

    // Run on initial load
    fetchLatestRelease();

    // Run on Astro page navigation
    document.addEventListener('astro:after-swap', fetchLatestRelease);
  </script>
</BaseLayout>
